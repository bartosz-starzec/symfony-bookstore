{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-7 ml-auto mr-auto">
            <h2>All authors: </h2>
            <div class="authors">
                <table class="table  table-striped table-hover">
                    <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Surname</th>
                        <th scope="col">Birth date</th>
                        <th scope="col">Nickname</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for author in authors %}
                        <tr scope="row" class="author-row">
                            <td>
                                {{ author.id }}
                            </td>
                            <td>
                                <a href="{{ path('authors_show', {id: author.id}) }}">
                                    {{ author.name }}
                                </a>
                            </td>
                            <td>
                                {{ author.surname }}
                            </td>
                            <td>
                                {{ author.birthDate|date("m/d/Y") }}
                            </td>
                            <td>
                                {{ author.nickname }}
                            </td>
                            <td>
                                <a class="btn btn-primary" href="{{ path('authors_edit', {id: author.id}) }}" role="button">
                                    Edit author
                                </a>
                                <a class="btn btn-danger" href="{{ path('authors_delete', {id: author.id}) }}"
                                   role="button">
                                    Delete author
                                </a>
                            </td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
            <a class="btn btn-primary" href="{{ path('authors_create') }}" role="button">Create new author</a>
        </div>
    </div>
{% endblock %}
