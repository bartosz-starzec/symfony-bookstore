{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-6 ml-auto mr-auto">
            <h2>All books: </h2>
            <div class="books">
                <table class="table  table-striped table-hover">
                    <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Year</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for book in books %}
                        <tr scope="row" class="book-row">
                            <td>
                                {{ book.id }}
                            </td>
                            <td>
                                <a href="{{ path('books_show', {id: book.id}) }}">
                                    {{ book.name }}
                                </a>
                            </td>
                            <td>
                                {{ book.price }} z≈Ç
                            </td>
                            <td>
                                {{ book.year }}
                            </td>
                            <td>
                                <a class="btn btn-primary" href="{{ path('books_edit', {id: book.id}) }}" role="button">
                                    Edit book
                                </a>
                                <a class="btn btn-danger" href="{{ path('books_delete', {id: book.id}) }}"
                                   role="button">
                                    Delete book
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <a class="btn btn-primary" href="{{ path('books_create') }}" role="button">Create new book</a>
        </div>
    </div>
{% endblock %}
